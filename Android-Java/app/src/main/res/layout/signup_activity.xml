<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signup_activity_signup_constraint_layout_background_color">

    <TextView
        android:id="@+id/sign_up_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/signup_activity_sign_up_text_view_margin_top"
        android:fontFamily="@font/font_lato_bold"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:lineSpacingMultiplier="1"
        android:text="Sign up"
        android:textColor="@color/signup_activity_sign_up_text_view_text_color"
        android:textSize="@dimen/signup_activity_sign_up_text_view_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="89dp"/>

    <TextView
        android:id="@+id/it_sfree_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/signup_activity_it_sfree_text_view_margin_top"
        android:fontFamily="@font/font_lato_regular"
        android:gravity="center"
        android:lineSpacingMultiplier="1"
        android:text="Itâ€™s free and always will be.
Because advertisement."
        android:textColor="@color/signup_activity_it_sfree_text_view_text_color"
        android:textSize="@dimen/signup_activity_it_sfree_text_view_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="159dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/sign_up_fields_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/signup_activity_sign_up_fields_constraint_layout_height"
        android:layout_marginLeft="@dimen/signup_activity_sign_up_fields_constraint_layout_margin_start"
        android:layout_marginRight="@dimen/signup_activity_sign_up_fields_constraint_layout_margin_end"
        android:layout_marginTop="@dimen/signup_activity_sign_up_fields_constraint_layout_margin_top"
        android:background="@drawable/signup_activity_sign_up_fields_constraint_layout_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/it_sfree_text_view"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="273dp">
    
        <EditText
            android:id="@+id/your_nickname_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/signup_activity_your_nickname_edit_text_margin_start"
            android:layout_marginRight="@dimen/signup_activity_your_nickname_edit_text_margin_end"
            android:layout_marginTop="@dimen/signup_activity_your_nickname_edit_text_margin_top"
            android:fontFamily="@font/font_lato_regular"
            android:gravity="left"
            android:lineSpacingMultiplier="1"
            android:textColor="@color/signup_activity_your_nickname_edit_text_text_color"
            android:textSize="@dimen/signup_activity_your_nickname_edit_text_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="14dp"/>
    
        <android.support.constraint.ConstraintLayout
            android:id="@+id/separator_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/signup_activity_separator_constraint_layout_height"
            android:layout_marginTop="@dimen/signup_activity_separator_constraint_layout_margin_top"
            android:alpha="0.1"
            android:background="@color/signup_activity_separator_constraint_layout_background_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_nickname_edit_text"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="50dp"/>
    
        <EditText
            android:id="@+id/your_spacemail_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/signup_activity_your_spacemail_edit_text_margin_start"
            android:layout_marginRight="@dimen/signup_activity_your_spacemail_edit_text_margin_end"
            android:layout_marginTop="@dimen/signup_activity_your_spacemail_edit_text_margin_top"
            android:fontFamily="@font/font_lato_regular"
            android:gravity="left"
            android:lineSpacingMultiplier="1"
            android:textColor="@color/signup_activity_your_spacemail_edit_text_text_color"
            android:textSize="@dimen/signup_activity_your_spacemail_edit_text_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_constraint_layout"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="65dp"/>
    
        <android.support.constraint.ConstraintLayout
            android:id="@+id/separator_two_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/signup_activity_separator_two_constraint_layout_height"
            android:layout_marginTop="@dimen/signup_activity_separator_two_constraint_layout_margin_top"
            android:alpha="0.1"
            android:background="@color/signup_activity_separator_two_constraint_layout_background_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_spacemail_edit_text"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="101dp"/>
    
        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/signup_activity_password_edit_text_margin_start"
            android:layout_marginRight="@dimen/signup_activity_password_edit_text_margin_end"
            android:layout_marginTop="@dimen/signup_activity_password_edit_text_margin_top"
            android:fontFamily="@font/font_lato_regular"
            android:gravity="left"
            android:lineSpacingMultiplier="1"
            android:textColor="@color/signup_activity_password_edit_text_text_color"
            android:textSize="@dimen/signup_activity_password_edit_text_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_two_constraint_layout"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="116dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/tos_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/signup_activity_tos_constraint_layout_height"
        android:layout_marginLeft="@dimen/signup_activity_tos_constraint_layout_margin_start"
        android:layout_marginRight="@dimen/signup_activity_tos_constraint_layout_margin_end"
        android:layout_marginTop="@dimen/signup_activity_tos_constraint_layout_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_fields_constraint_layout"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="440dp">
    
        <TextView
            android:id="@+id/i_agree_with_interga_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_lato_regular"
            android:gravity="left"
            android:lineSpacingMultiplier="1"
            android:text="I agree with intergalatic terms and conditions"
            android:textColor="@color/signup_activity_i_agree_with_interga_text_view_text_color"
            android:textSize="@dimen/signup_activity_i_agree_with_interga_text_view_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="7dp"/>
    
        <Switch
            android:id="@+id/switch_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="0dp"/>
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/signup_activity_sign_up_button_height"
        android:layout_marginBottom="@dimen/signup_activity_sign_up_button_margin_bottom"
        android:layout_marginLeft="@dimen/signup_activity_sign_up_button_margin_start"
        android:layout_marginRight="@dimen/signup_activity_sign_up_button_margin_end"
        android:background="@drawable/signup_activity_sign_up_button_selector"
        android:fontFamily="@font/font_lato_bold"
        android:gravity="center"
        android:lineSpacingMultiplier="1"
        android:text="SIGN UP"
        android:textColor="@color/signup_activity_sign_up_button_text_color"
        android:textSize="@dimen/signup_activity_sign_up_button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/log_in_constraint_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="559dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/log_in_constraint_layout"
        android:layout_width="@dimen/signup_activity_log_in_constraint_layout_width"
        android:layout_height="@dimen/signup_activity_log_in_constraint_layout_height"
        android:layout_marginBottom="@dimen/signup_activity_log_in_constraint_layout_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="629dp">
    
        <TextView
            android:id="@+id/already_gave_up_your_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/signup_activity_already_gave_up_your_text_view_margin_start"
            android:fontFamily="@font/font_lato_regular"
            android:gravity="center"
            android:lineSpacingMultiplier="1"
            android:text="Already gave up your soul? "
            android:textColor="@color/signup_activity_already_gave_up_your_text_view_text_color"
            android:textSize="@dimen/signup_activity_already_gave_up_your_text_view_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="0dp"/>
    
        <Button
            android:id="@+id/log_in_button"
            android:layout_width="@dimen/signup_activity_log_in_button_width"
            android:layout_height="@dimen/signup_activity_log_in_button_height"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/font_lato_bold"
            android:gravity="center"
            android:lineSpacingMultiplier="1"
            android:text="Log In!"
            android:textColor="@color/signup_activity_log_in_button_text_color"
            android:textSize="@dimen/signup_activity_log_in_button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="0dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
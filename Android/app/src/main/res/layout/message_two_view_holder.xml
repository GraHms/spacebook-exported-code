<?xml version="1.0" encoding="utf-8" standalone="no"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/message_two_view_holder_message_height"
	android:background="@color/message_two_view_holder_message_background_color">

	<android.support.constraint.ConstraintLayout
		android:id="@+id/avatar_constraint_layout"
		android:layout_width="@dimen/message_two_view_holder_avatar_constraint_layout_width"
		android:layout_height="@dimen/message_two_view_holder_avatar_constraint_layout_height"
		android:layout_marginLeft="@dimen/message_two_view_holder_avatar_constraint_layout_margin_start"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="15dp"
		tools:layout_editor_absoluteY="10dp">

		<android.support.constraint.ConstraintLayout
			android:id="@+id/ui_avatar_small_copy_constraint_layout"
			android:layout_width="0dp"
			android:layout_height="@dimen/message_two_view_holder_ui_avatar_small_copy_constraint_layout_height"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="0dp"
			tools:layout_editor_absoluteY="0dp">

			<ImageView
				android:id="@+id/avatar_astronaut_image_view"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/message_two_view_holder_avatar_astronaut_image_view_margin_start"
				android:layout_marginRight="@dimen/message_two_view_holder_avatar_astronaut_image_view_margin_end"
				android:scaleType="fitXY"
				android:src="@drawable/avatarastronaut_2"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:layout_editor_absoluteX="-1dp"
				tools:layout_editor_absoluteY="-1dp"/>

		</android.support.constraint.ConstraintLayout>

	</android.support.constraint.ConstraintLayout>

	<TextView
		android:id="@+id/i_mtelling_you_the_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/message_two_view_holder_i_mtelling_you_the_text_view_margin_start"
		android:layout_marginTop="@dimen/message_two_view_holder_i_mtelling_you_the_text_view_margin_top"
		android:fontFamily="@font/font_lato_bold"
		android:gravity="left"
		android:lineSpacingMultiplier="1"
		android:text="@string/message_two_view_holder_i_mtelling_you_the_text_view_text"
		android:textColor="@color/message_two_view_holder_i_mtelling_you_the_text_view_text_color"
		android:textSize="@dimen/message_two_view_holder_i_mtelling_you_the_text_view_text_size"
		app:layout_constraintLeft_toRightOf="@+id/avatar_constraint_layout"
		app:layout_constraintTop_toBottomOf="@+id/name_text_view"
		tools:layout_editor_absoluteX="85dp"
		tools:layout_editor_absoluteY="46dp"/>

	<TextView
		android:id="@+id/name_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/message_two_view_holder_name_text_view_margin_start"
		android:layout_marginTop="@dimen/message_two_view_holder_name_text_view_margin_top"
		android:fontFamily="@font/font_lato_regular"
		android:gravity="left"
		android:lineSpacingMultiplier="1"
		android:text="@string/message_two_view_holder_name_text_view_text"
		android:textColor="@color/message_two_view_holder_name_text_view_text_color"
		android:textSize="@dimen/message_two_view_holder_name_text_view_text_size"
		app:layout_constraintLeft_toRightOf="@+id/avatar_constraint_layout"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="85dp"
		tools:layout_editor_absoluteY="23dp"/>

	<ImageView
		android:id="@+id/path2_image_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/message_two_view_holder_path2_image_view_margin_end"
		android:scaleType="fitXY"
		android:src="@drawable/path_2"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="348dp"
		tools:layout_editor_absoluteY="33dp"/>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8" standalone="no"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/messages"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#F4F2F4">

	<android.support.v7.widget.RecyclerView
		android:id="@+id/collection_view"
		android:layout_width="0dp"
		android:layout_height="@dimen/activity_messages_vc_collection_view_height"
		android:layout_marginLeft="@dimen/activity_messages_vc_collection_view_margin_start"
		android:layout_marginRight="@dimen/activity_messages_vc_collection_view_margin_end"
		android:layout_marginTop="@dimen/activity_messages_vc_collection_view_margin_top"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="15dp"
		tools:layout_editor_absoluteY="74dp"
		tools:listitem="@layout/online_person_cell"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/table_view"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="@dimen/activity_messages_vc_table_view_margin_top"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/collection_view"
		tools:layout_editor_absoluteX="0dp"
		tools:layout_editor_absoluteY="161dp"
		tools:listitem="@layout/message_cell"/>

	<android.support.v7.widget.Toolbar
		android:id="@+id/activity_messages_vc_toolbar"
		android:layout_width="0dp"
		android:layout_height="?attr/actionBarSize"
		android:background="@drawable/background"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8" standalone="no"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/welcome"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/activity_welcome_vc_welcome_background">

	<TextView
		android:id="@+id/spacebook_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/activity_welcome_vc_spacebook_label_margin_top"
		android:fontFamily="@font/font_lato_bold"
		android:gravity="center"
		android:text="@string/activity_welcome_vc_spacebook_label_text"
		android:textColor="@color/activity_welcome_vc_spacebook_label_text_color"
		android:textSize="@dimen/activity_welcome_vc_spacebook_label_text_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/logo_iv"
		tools:layout_editor_absoluteX="86dp"
		tools:layout_editor_absoluteY="270dp"/>

	<TextView
		android:id="@+id/conquer_the_stars_label"
		android:layout_width="@dimen/activity_welcome_vc_conquer_the_stars_label_width"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/activity_welcome_vc_conquer_the_stars_label_margin_top"
		android:fontFamily="@font/font_lato_regular"
		android:gravity="center"
		android:text="@string/activity_welcome_vc_conquer_the_stars_label_text"
		android:textColor="@color/activity_welcome_vc_conquer_the_stars_label_text_color"
		android:textSize="@dimen/activity_welcome_vc_conquer_the_stars_label_text_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/spacebook_label"
		tools:layout_editor_absoluteX="92dp"
		tools:layout_editor_absoluteY="345dp"/>

	<ImageView
		android:id="@+id/logo_iv"
		android:layout_width="@dimen/activity_welcome_vc_logo_iv_width"
		android:layout_height="@dimen/activity_welcome_vc_logo_iv_height"
		android:layout_marginTop="@dimen/activity_welcome_vc_logo_iv_margin_top"
		android:scaleType="fitXY"
		android:src="@drawable/logo"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="128dp"
		tools:layout_editor_absoluteY="100dp"/>

	<LinearLayout
		android:id="@+id/log_in"
		android:layout_width="@dimen/activity_welcome_vc_log_in_width"
		android:layout_height="@dimen/activity_welcome_vc_log_in_height"
		android:layout_marginBottom="@dimen/activity_welcome_vc_log_in_margin_bottom"
		android:layout_marginRight="@dimen/activity_welcome_vc_log_in_margin_end"
		android:background="@drawable/activity_welcome_vc_log_in_selector"
		android:elevation="@dimen/elevation_default"
		android:gravity="center"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/material_size_small"
		android:paddingTop="@dimen/material_size_small"
		app:layout_constraintBottom_toTopOf="@+id/supernova_stu_label"
		app:layout_constraintRight_toRightOf="parent"
		tools:layout_editor_absoluteX="197dp"
		tools:layout_editor_absoluteY="484dp">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/material_size_small"
			android:layout_marginRight="@dimen/material_size_small"
			app:srcCompat="@drawable/icon_log_in"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/font_lato_bold"
			android:gravity="center"
			android:text="@string/activity_welcome_vc_log_in_text"
			android:textColor="@color/activity_welcome_vc_log_in_text_color"
			android:textSize="@dimen/activity_welcome_vc_log_in_text_size"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/sign_up"
		android:layout_width="@dimen/activity_welcome_vc_sign_up_width"
		android:layout_height="@dimen/activity_welcome_vc_sign_up_height"
		android:layout_marginBottom="@dimen/activity_welcome_vc_sign_up_margin_bottom"
		android:layout_marginLeft="@dimen/activity_welcome_vc_sign_up_margin_start"
		android:background="@drawable/activity_welcome_vc_sign_up_selector"
		android:elevation="@dimen/elevation_default"
		android:gravity="center"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/material_size_small"
		android:paddingTop="@dimen/material_size_small"
		app:layout_constraintBottom_toTopOf="@+id/supernova_stu_label"
		app:layout_constraintLeft_toLeftOf="parent"
		tools:layout_editor_absoluteX="30dp"
		tools:layout_editor_absoluteY="484dp">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/material_size_small"
			android:layout_marginRight="@dimen/material_size_small"
			app:srcCompat="@drawable/icon_sign_up"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/font_lato_bold"
			android:gravity="center"
			android:text="@string/activity_welcome_vc_sign_up_text"
			android:textColor="@color/activity_welcome_vc_sign_up_text_color"
			android:textSize="@dimen/activity_welcome_vc_sign_up_text_size"/>

	</LinearLayout>

	<TextView
		android:id="@+id/supernova_stu_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/activity_welcome_vc_supernova_stu_label_margin_bottom"
		android:fontFamily="@font/font_lato_regular"
		android:gravity="center"
		android:text="@string/activity_welcome_vc_supernova_stu_label_text"
		android:textColor="@color/activity_welcome_vc_supernova_stu_label_text_color"
		android:textSize="@dimen/activity_welcome_vc_supernova_stu_label_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		tools:layout_editor_absoluteX="100dp"
		tools:layout_editor_absoluteY="625dp"/>

</android.support.constraint.ConstraintLayout>

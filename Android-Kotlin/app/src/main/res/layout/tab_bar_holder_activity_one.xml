<?xml version="1.0" encoding="utf-8" standalone="no"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.v4.view.ViewPager
		android:id="@+id/view_pager"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="@+id/tab_bar"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<android.support.design.widget.BottomNavigationView
		android:id="@+id/tab_bar"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@color/tab_bar_holder_activity_one_bottom_navigation_bar_background_color"
		app:itemIconTint="@color/tab_bar_holder_activity_one_bottom_navigation_bar_tint"
		app:itemTextColor="@color/tab_bar_holder_activity_one_bottom_navigation_bar_tint"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:menu="@menu/menu_tab_group__1_tabbar"/>

	<android.support.v7.widget.Toolbar
		android:id="@+id/tab_bar_holder_activity_one_toolbar"
		android:layout_width="0dp"
		android:layout_height="?attr/actionBarSize"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
